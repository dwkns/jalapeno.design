iHeight: 140
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{% block title %}{{ site.name }}{% if title %} &raquo; {{ title }}{% endif %}{% endblock %}</title>
    <!-- preconnect -->
    <link rel="preconnect" href="//cdn.jsdelivr.net" crossorigin>
    <link rel="preconnect" href="//res.cloundinary.com" crossorigin>    
    <link rel="preconnect" href="https://rsms.com" crossorigin>
    {% include "seo.njk" %}    
    <!-- styles -->
    <link rel="stylesheet" href="/assets/css/tailwind.css?v={% version %}"/>
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <!-- favicon -->
    <link rel="icon" href="/assets/images/logo.svg" type="image/svg+xml"/>
    <!-- scripts -->
    <script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/mask@3.x.x/dist/cdn.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <!--
    debugging info
    =============================
      site.name:  {{ site.name }}
      site.url:   {{ site.url }}
      title:      {{ title}}
      accent:     {{ accent }}
      iHeight:    {{ iHeight }}
      build:      {{ buildInfo.hash }}
    ==============================
    -->
  </head>

  <body class="bg-base-100 text-base-content">
    <div class="md:flex max-w-7xl min-h-[80vh] print:min-h-auto mx-auto">

      <!-- column sidebar-l -->
        {% include "sidebar-l.njk" %}

      <!-- column divider -->
      <div class="w-[20px] hidden lg:block flex-none print:hidden">
        <div class="flex-none w-[20px] fixed bg-[url(/assets/images/optim.svg)] eleventy:ignore h-full dark:bg-[url(/assets/images/optim_dark.svg)]"></div>
        <div class="w-full h-{{ iHeight }} {{ accent }} mt-20 block">&nbsp;</div>     
      </div>

      <!-- column mainbar -->
      <div class="w-full lg:w-[calc(100%-220px)]">
        <main class="w-full md:pt-20 md:pr-4">
    {% block content %}
      {{ content | safe }}
    {% endblock %}
        </main>
      </div>

    </div>  
    <!-- footer -->
    {% include "cookie.njk" %}
    {% include "footer.njk" %}                       
    {% include "tw_size.njk" %}                                                                                                                                                      
  </body>

</html>