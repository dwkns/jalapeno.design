---
iHeight: 140
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{% block title %}{{ siteName }}{% if title %} &raquo; {{ title }}{% endif %}{% endblock %}</title>
    <!-- preconnect -->
    <link rel="preconnect" href="//cdn.jsdelivr.net" crossorigin>
    <link rel="preconnect" href="//res.cloundinary.com" crossorigin>    
    <link rel="preconnect" href="https://rsms.com" crossorigin>
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <!-- styles -->
    <link rel="stylesheet" href="/assets/css/tailwind.css?v={% version %}"/>
    <!-- favicon -->
    <link rel="icon" href="/assets/images/logo.svg" type="image/svg+xml"/>
    {% if slideshow %}<!-- Slideshow: https://pagedone.io/docs/carousel-->
    <link href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" rel="stylesheet"/>{% endif %}
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    {% block head %}{% endblock %}
  </head>

  <body class="bg-white dark:bg-gray-900 text-black dark:text-white">{% include "tw_size.njk" %}
    <div class="md:flex max-w-7xl min-h-screen mx-auto">

      <!-- column sidebar-l -->
      <div class="w-[200px] order-1 flex-none">
        {% include "sidebar-l.njk" %}
      </div>

      <!-- column divider -->
      <div class="w-[20px] order-2 hidden lg:block flex-none">
        <div class="flex-none w-[20px] fixed bg-[url(/assets/images/optim.svg)] eleventy:ignore h-full dark:bg-[url(/assets/images/optim_dark.svg)] order-2"></div>
        <div class="w-full h-{{ iHeight }} {{ accent }} mt-20 block"></div>     
      </div>

      <!-- column mainbar -->
      <div class="w-full order-3 lg:w-[calc(100%-220px)] border-r-2 border-gray-200 dark:border-gray-800">
        <main role="main" class="w-full pt-20 pr-4">
    {% block content %}
      {{ content | safe }}
    {% endblock %}
        </main>
      </div>

    </div>  
    <!-- footer -->
    {% include "footer.njk" %}                                                                                                                                                                             
  </body>

</html>