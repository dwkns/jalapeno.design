---
layout: default.njk
---
<div class="flex flex-col h-screen justify-between">

  <!-- main content -->
  <main>
    <div class="w-3/4 mx-auto max-w-5xl">
      <div class="relative">
        <img src="{{ hero_image }}" alt="{{ heading }}" width="1024" class="w-full h-96 object-cover">

        <div class="absolute inset-0 flex ml-4 mb-4 items-end">
          <h1 class="text-white text-4xl font-bold bg-black/40 p-2 rounded-sm backdrop-blur-xs">{{ heading }}</h1>
        </div>
      </div>





<h3>Problem</h3>
{{ problem | safe }}

<h3>Solution</h3>
{{ solution | safe }}

    </div>


  </main>
</div>