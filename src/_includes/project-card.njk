 <!-- project-card start -->
 
 <div class="card w-full shadow-lg mb-4 dark:bg-gray-800">
  <a href="{{ post.url}}">
    <figure>
      <img class="w-full " src="{{ post.data.hero_image }}" alt="{{ post.data.title}}">
    </figure>
  </a>
  <div class="card-body">
    <div class="card-title">{{ post.data.title }}</div>
    <p class="text-gray-700 dark:text-gray-200">
        {{ post.data.description }}
    </p>
    <p class="text-xs">
      Reading Time: {{ post.content | timeToRead }} 
    </p>
  <div class="card-actions justify-end">
    {% for tag in post.data.tags %}
    {% if tag != "portfolio" %}
    <a href="/tags/{{ tag | slug }}/" class="">
    <span class="inline-block rounded-full px-3 py-1 text-sm indy-button mr-2 mb-2 transition duration-300">
        {{ tag }}
    </span>
    </a>
    {% endif %}
    {% endfor %}
  </div>
  </div>

</div>

<!-- project-card end -->