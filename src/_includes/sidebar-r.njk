<!-- right bar -->
<div class="w-full pt-4 float-right">
  <div class="top-0 border border-gray-200 dark:border-gray-700 p-4 rounded-lg max-w-sm">
    <div class="mb-2 text-xs">
      Reading Time: {{ content | timeToRead }} 
    </div>
    <div class="mb-2">
      <h3 class="">Table of Contents:</h3>
      <ul class="list-disc list-inside text-sm">
{% for heading in headings %}
        <li><a href="#{{ heading }}" class="a-link capitalize">{{ heading }}</a></li>
{% endfor %}

      </ul>
    </div>

{% if tags %}
  <div class="mb-2">
    <h3 class="">Tags:</h3>
  </div>
  <div class="flex flex-wrap gap-2 mb-4">
    {% for tag in tags %}
    {% if tag != "portfolio" %}
    <a href="/tags/{{ tag | slug }}/" class="text-sm indy-button px-2 py-1 rounded-lg transition duration-300">
      {{ tag }}
    </a>
    {% endif %}
    {% endfor %}
  </div>
{% endif %}</div>

</div>

<!-- end right bar -->  