    {% set patent = row['Patent number'] | splitPatentNumber %}

    <div class="w-full bg-base-100 hover:bg-base-200 border border-gray-200 hover:border-gray-500 dark:border-gray-700 p-4 rounded-md my-4">
      
      <div class="grid grid-cols-12 gap-2">
        <div>{{ rowNo }}</div>

      <div class="col-span-4">
        <div>
          <a href="{{ patent.url }}" class="a-link external" target="_blank">
            {{ patent.text }}
          </a>
        </div>
        <div>
          {{ row['Publication Date'] }}
        </div>
      </div>
      <div class="col-span-7 row-span-2">{{ row.Title }}</div>
      </div>
    </div>
